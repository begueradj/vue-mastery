$font-family-base = 'Source Sans Pro', sans-serif
$font-size-base = 18px

// Forms

$border-size = 2px
$form-radius = 30px

$button-height = 54px
$button-height-small = ($button-height - 10px)

// Colors
$primary-color = #39B982
$secondary-color = #0A2B4E
$tertiary-color = #835ec2
$black = #222
$gray = #555
$gray-light = #bfbfbf
$white = #FFF

$states = {
  info: #A8D7DD
  success: $primary-color
  warning: #F3E43C
  error: #E04848
}

$shadow = {
  'depth-1': s('%s %s %s %s', 0 1px 2px rgba(#000, 0.2)) s(', %s %s %s %s', 0 1px 5px rgba(#000, 0.13))
  'depth-4': s('%s %s %s %s', 0 25px 55px rgba(#000, 0.2)) s(', %s %s %s %s', 0 16px 28px rgba(#000, 0.24))
}
// Spacing
$vertical-space = 90px
$header-height = 100px

// Use size.by-[number] 
// for multiples of 18 [0:0, 1:18, 2:27, 3:45, .. 16:288]
$size = {}
for i in (0..16)
	$size['by-' + i] = i * 18px
